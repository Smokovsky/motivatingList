<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/reward_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <TextView
        android:id="@+id/reward_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:paddingBottom="0dp"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/reward_repeatable"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/reward_done_button"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="#DDD"
        android:text="@string/symbol_done"
        app:layout_constraintBottom_toTopOf="@+id/reward_done_button_highlight"
        app:layout_constraintEnd_toStartOf="@+id/reward_delete_button"
        app:layout_constraintTop_toBottomOf="@+id/reward_name"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintWidth_max="40dp" />

    <Button
        android:id="@+id/reward_delete_button"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="#DDD"
        android:text="@string/symbol_delete"
        app:layout_constraintBottom_toTopOf="@+id/reward_delete_button_highlight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reward_name"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/reward_finish_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/reward_done_button"
        app:layout_constraintHorizontal_bias="0.027"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reward_name"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/reward_done_button_highlight"
        android:layout_width="50dp"
        android:layout_height="5dp"
        android:layout_marginBottom="8dp"
        android:background="#22BB06"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/reward_done_button"
        app:layout_constraintStart_toStartOf="@+id/reward_done_button" />

    <TextView
        android:id="@+id/reward_delete_button_highlight"
        android:layout_width="40dp"
        android:layout_height="5dp"
        android:layout_marginBottom="8dp"
        android:background="#BC3306"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/reward_delete_button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/reward_delete_button" />

    <TextView
        android:id="@+id/reward_repeatable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/symbol_repeatable"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/reward_delete_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>